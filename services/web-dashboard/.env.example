# === WEB DASHBOARD SERVICE CONFIGURATION ===

# Flask Server Configuration
FLASK_PORT=5000
FLASK_HOST=0.0.0.0
FLASK_DEBUG=false
FLASK_SECRET_KEY=generate_a_secure_secret_key_here

# Dashboard Settings
DASHBOARD_REFRESH_INTERVAL=30
ENABLE_API_ENDPOINTS=true
ENABLE_LIVE_CHARTS=true
CHART_HISTORY_DAYS=7

# Security Settings
ENABLE_AUTH=false
SESSION_TIMEOUT=3600
CORS_ORIGINS=*

# Performance Settings
CACHE_TIMEOUT=300
MAX_CHART_POINTS=1000